<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient">

    <!-- Header -->

    <!-- Email/Username Label -->
    <TextView
        android:id="@+id/header"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/label_email"
        android:layout_width="140dp"
        android:layout_height="32dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <!-- Email Input -->
    <EditText
        android:id="@+id/input_email"
        android:layout_width="253dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/label_email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="280dp"
        android:textColor="#FFFFFF"
        android:hint="myname@gmail.com"
        android:textColorHint="#686363"
        android:background="@android:color/transparent"/>

    <!-- Password Label -->
    <TextView
        android:id="@+id/label_password"
        android:layout_width="140dp"
        android:layout_height="32dp"
        android:layout_below="@id/input_email"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Password Input -->
    <EditText
        android:id="@+id/input_password"
        android:layout_width="253dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/label_password"
        android:layout_below="@+id/input_email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:hint="**********"
        android:textColorHint="#686363"
        android:background="@android:color/transparent"
        android:inputType="textPassword"/>

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#47A6FE"
        android:text="Log In to Exsiting Account"
        android:textSize="18dp"
        android:textStyle="normal"
        android:textColor="#FFFFFF" />

    <!-- Register Link -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_button"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Register"
        android:textColor="#47A6FE"
        android:textSize="15sp"
        android:background="@drawable/register_button"
        android:backgroundTint="@null"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back_button"
        android:background="@android:color/transparent"
        android:contentDescription="Back Button"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/back_button"
        android:layout_marginTop="10dp"
        android:src="@drawable/bar"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        app:tint="@color/places_autocomplete_error_message" />





</RelativeLayout>
